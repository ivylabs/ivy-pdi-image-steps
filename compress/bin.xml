<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>package</id>
	<formats>
		<format>dir</format>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.latinojoel.di.trans.steps.image:pdi.imageconverter.step:jar</include>
			</includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<directory>target/ImageConverterStep/ImageConverterStep</directory>
						<outputDirectory>ImageConverterStep</outputDirectory>
						<includes>
							<include>**</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
			<binaries>
				<outputDirectory>ImageConverterStep/lib</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.latinojoel.di.trans.steps.image:pdi.imagecrop.step:jar</include>
			</includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<directory>target/ImageCropStep/ImageCropStep</directory>
						<outputDirectory>ImageCropStep</outputDirectory>
						<includes>
							<include>**</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
			<binaries>
				<outputDirectory>ImageCropStep/lib</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.latinojoel.di.trans.steps.image:pdi.imageresize.step:jar</include>
			</includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<directory>target/ImageResizeStep/ImageResizeStep</directory>
						<outputDirectory>ImageResizeStep</outputDirectory>
						<includes>
							<include>**</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
			<binaries>
				<outputDirectory>ImageResizeStep/lib</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>